.headband1 {
    height: 100%;
    width: 100%;
    background-image: linear-gradient(135deg, #fdfcfb 0%, #e2d1c3 100%);
    position: relative;
    overflow: hidden;
}
.arrow{
    animation: myfirst .5s;
    border-top: solid 10px #f5f0eb;
    border-left: solid 10px rgba(0,0,0,0);
    border-right: solid 10px rgba(0,0,0,0);
    position: absolute;
    bottom:40px;
    left: calc(50% - 5px);
    animation-iteration-count: infinite;
    animation-direction: alternate;
    animation-timing-function: cubic-bezier(0.79, 0.1, 0.36, 1.07);
}
@keyframes myfirst
{
    from {bottom: 40px;}
    to {bottom: 20px;}
}
.headband {
    height: 0;
    width: 100%;
    overflow hidden;
    background-image: linear-gradient(135deg, #fdfcfb 0%, #e2d1c3 100%);
}